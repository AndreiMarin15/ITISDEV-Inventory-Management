<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="css/base.css">
		<link rel="stylesheet" href="css/invmanagerTransactionList.css">
		<script src="https://kit.fontawesome.com/e5cabd2361.js" crossorigin="anonymous"></script>
	</head>
	<body>

        {{>invManagerPanel}}

		<div class="content-container">
			<div class="transaction-list-container">
				<h1> Transaction List</h1>

				<div class="search-box">
					<form>
						<input type="text" placeholder="Search" name="search">
						<button type="submit"><i class="fa fa-search search-icon"></i></button>
					</form>
				</div>

				<div class = "table-container">
				<table>
					<col style="width:10%">
					<col style="width:15%">
					<col style="width:15%">
					<col style="width:20%">
					<col style="width:10%">

					<thead>
					<tr>
						<th>Date</th>
						<th>Receipt Number</th>
						<th>Item Name</th>
						<th>Quantity</th>
						<th> </th>
					  </tr>
					</thead>
						{{#each transactions}}
					  <tr>
						<td>{{transactions.buyDate}}</td>
						<td>{{transactions.transactionID}}</td>
						<td>{{transactions.ingredientName}}</td>
						<td>{{transactions.quantity}}</td>
						<td><button class="button-view">View</button></td>
					  </tr>
					  {{/each}}
				</table>
				</div>
			</div>
		</div>
</body>
</html>

<!DOCTYPE html>
<html>
	<head>
		<title>Owner | Sales Transaction Trail</title>
		<link rel="stylesheet" href="css/base.css">
		<link rel="stylesheet" href="css/ownerPanel.css">
		<script src="https://kit.fontawesome.com/e5cabd2361.js" crossorigin="anonymous"></script>
	</head>
	<body>

        {{>ownerPanel}}

		<div class="content-container">
			<div class="transaction-trail-container">
            <div>
                <h1>Transaction Trail Page</h1>
                <span class="sub-text2">As of: {{dateToday}}</span>
            </div>
				<!-- SEARCH -->
				
                <div class="search-filters">
                    <div>
                        <input type="text" placeholder="Search" name="search">
                        <button type="submit"><i class="fa fa-search search-icon"></i></button>
                    </div>
                    <div class="filters">
                        <div>
                            <label for="filters">Filter By:</label>
                            <select id="filter" class="dropdown" name="filter">
                                <option value="RecipeName">Recipe Name</option>
                                <option value="MenuGroup">Menu Group</option>
                                <option value="Quantity">Quantity</option>
                                <option value="TotalRevenue">Total Revenue</option>
                            </select>
                        </div>
						<div>
                        <label for="filters">Sort By:</label>
                        <select id="sort" class="dropdown" name="sort">
                            <option value="Ascending">Ascending</option>
                            <option value="Descending">Descending</option>
                        </select>
                    	</div>
						<button type="submit"><i class="fa-solid fa-filter"></i> filter and sort</button>
                    </div>
                </div>

				<!-- DROPDOWN TO BE ADDED-->
				

				<!-- TABLE OF TRANSACTIONS -->
				<div class = "table-container">
				<table>
					<col style="width:10%">
					<col style="width:15%">
					<col style="width:15%">
					<col style="width:10%">


					<thead>
					<tr>
						<th>Recipe Name</th>
						<th>Menu Group </th>
						<th>Quantity Sold</th>
						<th>Total Revenue</th>
					  </tr>
					</thead>
						{{#each orderList}}
					  <tr>
						<td>{{recipeName}}</td>
						<td>{{menuGroupName}}</td>
						<td>{{totalQuantitySold}}</td>
						<td>{{totalPrice}}</td>
					  </tr>
					  {{/each}}
				</table>
				</div>
			</div>
		</div>
	</body>
</html>

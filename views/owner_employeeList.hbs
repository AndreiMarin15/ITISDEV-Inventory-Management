<!DOCTYPE html>
<html>
    <head>
        <title>Owner | Employee List</title>
        <link rel="stylesheet" href="css/base.css" />
        <link rel="stylesheet" href="css/employeeList.css" />
        <script src="https://kit.fontawesome.com/e5cabd2361.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <!-- START SIDE PANEL -->
    {{>ownerPanel}}
        <!-- END SIDE PANEL -->

        <div class="content-container">
            <div class="transaction-trail-container">
                <h1>Employee List</h1>

                <!-- SEARCH -->
                <div class="search-filters">
                    <div>
                        <input type="text" placeholder="Search" name="search">
                        <button type="submit"><i class="fa fa-search search-icon"></i></button>
                    </div>
                        <form action="/employeeListFiltered" method="post" class="filters">
                        <div>
                            
                            <label for="filters">Filter By:</label>
                            <select id="filter" class="dropdown" name="filter">
                                <option value="1">Employee ID</option>
                                <option value="2">Full Name</option>
                                <option value="3">Position</option>
                            </select>
                        </div>
                        <div>
                            <label for="filters">Sort By:</label>
                            <select id="sort" class="dropdown" name="sort">
                                <option value="1">Ascending</option>
                                <option value="2">Descending</option>
                            </select>
                        </div>
                        <input type="submit" value="filter and sort" class="button-green-filter popup">
                        </form>
                </div>
                <!-- DROPDOWN TO BE ADDED-->

                <!-- TABLE OF TRANSACTIONS -->
                <div class="table-container">
                    <table>
                        <col style="width: 10%" />
                        <col style="width: 15%" />
                        <col style="width: 15%" />

                        <thead>
                            <tr>
                                <th>Employee ID</th>
                                <th>Full Name</th>
                                <th>Position</th>
                            </tr>
                        </thead>
                        {{#each employee}}
                        <tr>
                            <td>{{userID}}</td>
                            <td>{{firstName}} {{lastName}}</td>
                            <td>{{position}}</td>
                        </tr>
                        {{/each}}
                    </table>
                    <p class="report-end"> ----- END OF LIST -----</p>
                </div>
            </div>
        </div>
    </body>
</html>

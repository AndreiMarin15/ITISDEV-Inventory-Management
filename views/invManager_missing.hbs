<!DOCTYPE html>
<html>
    <head>
        <title>Inventory Manager | Missing</title>
        <link rel="stylesheet" href="css/missing.css" />
        <link rel="stylesheet" href="css/base.css" />
        <script src="https://kit.fontawesome.com/e5cabd2361.js" crossorigin="anonymous"></script>
    </head>
    <body>

        {{>invManagerPanel}}

        <div class="page-container">
            <div><span class="header-font">Inventory Item Missing</span></div>
            <form action="#" method="post">
            <div class="category-box">
                {{#each foodGroup}}
                <div>
                    <button class="category-item"><span class="category-text">{{foodGroupName}}</span></button>
                </div>
                {{/each}}
            </div>

            <div class="inventory-container">
                <table class="inventory-table">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Type</th>
                            <th>Physical Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each Ingredient}}
                        <tr>
                            <td> {{ingredientName}} </td>
                            <td> {{categoryName}} </td>
                            <td><input type="number">  </td> 
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <input type="submit" class="button-green popup" />
            </form>
        </div>
    </body>
</html>

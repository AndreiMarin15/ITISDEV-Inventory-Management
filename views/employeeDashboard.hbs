<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="css/base.css">
		<link rel="stylesheet" href="css/employeeDashboard.css">
		<script src="https://kit.fontawesome.com/e5cabd2361.js" crossorigin="anonymous"></script>
	</head>
	<body>

		<!-- START SIDE PANEL -->
		<div class="panel-container">
            <div class="panel-box">
                <i class="fa-solid fa-house panel-icons"></i>
                <span class="panel-text">Home</span>
            </div>
            <hr class="line-separator" />
            <div class="panel-box">
                <i class="fa-solid fa-box panel-icons"></i>
                <span class="panel-text">Inventory List</span>
            </div>
            <div class="panel-box">
                <i class="fa-solid fa-circle-plus panel-icons"></i>
                <span class="panel-text">Create New Item</span>
            </div>
            <div class="panel-box">
                <i class="fa-solid fa-cart-plus panel-icons"></i>
                <span class="panel-text">Add Inventory</span>
            </div>
            <div class="panel-box">
                <i class="fa-regular fa-trash-can panel-icons"></i>
                <span class="panel-text">Spoilage</span>
            </div>
            <div class="panel-box">
                <i class="fa-solid fa-circle-question panel-icons"></i>
                <span class="panel-text">Missing</span>
            </div>
            <div class="logout-button">
                <i class="fa-solid fa-right-from-bracket logout-icon"></i>
                <span>Log Out</span>
            </div>
        </div>
		<!-- END SIDE PANEL -->

        <div class="content-container">
            <div class="containers">

               <!-- PROFILE GRID -->
               <div class="Profile">
                <div class="grid-content">
                    <h1> Profile </h1>

                    
                    <div class="user-icon">
                        <i class="fa-solid fa-circle-user prof-pic"></i>
                    </div>

                    <!-- NOTES: need to insert icons/images -->
                    <h2> Solomon Park </h2>
                    <p> Employee Name </p>

                    <h2> Inventory Manager </h2>
                    <p> Position </p>

                    <h2> 123456789 </h2>
                    <p> Employee ID </p>

                    <h2> 2022-12-08 10:55:42 </h2>
                    <p> Last Login </p>

                    <button class="prof-button"> Change Password </button>
                </div>
            </div>
            <!-- END PROFILE GRID -->

            <!-- INVENTORY-TRANSACTIONS GRID -->
            <div class="Inventory-Transactions">
                <div class="grid-content">
                    <h1 class="linked"> Inventory Transaction Trail </h1>
                    <!-- START INVENTORY-TRANSACTIONS TABLE

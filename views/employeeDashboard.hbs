                                <col style="width:15%">
                                <col style="width:20%">
                                <col style="width:10%">
            
                                <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Receipt Number</th>
                                    <th>Item Name</th>
                                    <th>Quantity</th>
                                    <th> </th>

                                    <td><button class="button-view">View</button></td>
                                  </tr>
                                  <tr>
                                    <td>XX-XX-XX</td>
                                    <td>XXXXXXXXXX</td>
                                    <td>Pasta Linguini</td>
                                    <td>XX</td>
                                    <td><button class="button-view"> View </button></td>
                                  </tr>
                                  <tr>
                                    <td>XX-XX-XX</td>
                                    <td>XXXXXXXXXX</td>
                                    <td>Fresh Milk</td>
                                    <td>XX</td>
                                    <td><button class="button-view"> View </button></td>
                                  </tr>
                            </table>
                    <!-- END INVENTORY-TRANSACTIONS TABLE -->
                </div>
            </div>
            <!-- END INVENTORY TRANSACTIONS GRID -->

            <!-- INVENTORY LIST GRID
                NOTES: Should only display last five items added to inventory list 
                        because hindi siya naka display: flex-->

            <div class="Inventory-List">
                <div class="grid-content">
                    <h1 class="linked"> Inventory List </h1>

                    <table class="inventory-table">
                        <col style="width:10%">
                        <col style="width:10%">
                        <col style="width:10%">
                        <col style="width:15%">

                        <thead>
                        <tr>
                            <th>Category</th>
                            <th>Food Group</th>
                            <th>Unit</th>

<!DOCTYPE html>
<html>
	<head>
        <title>Owner | Today's Menu</title>
		<link rel="stylesheet" href="css/base.css">
		<link rel="stylesheet" href="css/todaysMenu.css">
		<script src="https://kit.fontawesome.com/e5cabd2361.js" crossorigin="anonymous"></script>
	</head>
	<body>

		<!-- START SIDE PANEL -->
{{>ownerPanel}}
		<!-- END SIDE PANEL -->

        <div class="menu-content-container">
            <!-- GRID CONTAINER -->
            <div class="containers">

                <!-- MENU AND DATE -->
                <div class="text">
                    <h1>Menu List</h1>
                    <p class="ins-text"> Checked menu items will be added to your restaurant menu for the day.</p>
                    <!-- <p>DATE: xx-xx-xx</p> -->

                    <div class="inner-grid">
                        <p>DATE TODAY: {{dateToday}}</p>
                    <a href="/newFolder" class="inv-submit">+ Add New Menu Group</a>
                    </div>
                    <hr>                 
                </div>

                <!-- CATEGORY TABLE -->
                
				{{#each menugrps}}
                <div>
                <div class="categoryone">
                    <div class="grid-content">
                        <table>
                            <col style="width:95%">
                            <col style="width:5%">
		
							<thead>
                                <tr>
                                    <th>{{MenuGroupName}}</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody colspan="2">
							{{#each Recipe}}
                                <tr>
                                    <form action="/viewRecipe/{{recipeID}}" method="get">
                                    <td> 
                                        <input type="checkbox" value="{{recipeID}}">
                                        <span class="checkmark"></span>
                                        {{recipeName}}
                                    </td>
                                    <td>
                                        <input type="submit" value="View" class="view">
                                    </td>
                                    </form>
                                    
                                </tr>
							{{/each}}
                                <tr>
                                    <td colspan="2" style="text-align:center"><a href="/newDish/{{MenuGroupID}}" class="add"> + Add New Dish</a></td>
                                </tr>
                            </tbody>    
                        </table>
                     </div>
                </div>
                </div>
				{{/each}}
                <!-- END CATEGORY TABLE -->

                <!-- CATEGORY TABLE -->
            
                <!-- END CATEGORY TABLE -->
              </div>
            <!-- END GRID CONTAINER -->
        </div>

	</body>
	</html>

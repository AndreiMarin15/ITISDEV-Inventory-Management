<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="css/base.css">
		<link rel="stylesheet" href="css/add-ingredient.css">
		<script src="https://kit.fontawesome.com/e5cabd2361.js" crossorigin="anonymous"></script>
	</head>
	<body>

		{{>ownerPanel}}

		<div class="content-container">
			<div class="ingredients-container">
				<h1>Add Ingredients for {{Recipe.recipeName}}</h1>

				<!-- TABLE OF TRANSACTIONS -->
				<div class = "table-container">
				    <table>
					    <thead>
					    <tr>
						    <th>Category Name</th>
						    <th>Unit</th>
						    <th>Quantity</th>
					    </tr>
					    </thead>

					    <tr>
						    <td> 
								<select name="category" id="category" class="dropdown">
									{{#each Category}}
									<option>{{Category.categoryName}}</option>
									{{/each}}
								</select>
							</td>
						    <td>{{Category.unitName}}</td>
						    <td> <input type="number" class="textbox-short" id="quantity" name="quantity"></td>
					    </tr>
				    </table>
					<div>
					    <button class="button-green popup" onclick="myFunction()" style="margin-left:40px; margin-top:30px;"> 
                            + Add Ingredient
                            <span class="popuptext" id="myPopup">Ingredient Added!</span>
                        </button>
						</div>
                </div>

                    <!-- START Add Ingredient Button-->

                        <button class="button-green popup"> 
                            Submit
                        </button>
                        {{!-- <script>
                            // When the user clicks on <div>, open the popup
                            function myFunction() {
                              var popup = document.getElementById("myPopup");
                              popup.classList.toggle("show");
                            }
                        </script> --}}
                    <!-- END Add Ingredient Button-->      
			</div>
		</div>
</body>
</html>
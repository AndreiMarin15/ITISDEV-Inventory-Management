<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="css/base.css">
		<link rel="stylesheet" href="css/ownerDashboard.css">
		<script src="https://kit.fontawesome.com/e5cabd2361.js" crossorigin="anonymous"></script>
	</head>
	<body>

        {{>ownerPanel}}

        <div class="content-container">
            <div class="containers">

                <!-- ANNOUNCEMENTS GRID -->
                <div class="Create-User">
                    <div class="grid-content">
                        <h1> Create New User </h1>
                        <button>Create</button>
                    </div>
                </div>
                <!-- END ANNOUNCEMENTS GRID -->

                <!-- TO DO GRID -->
                <div class="To-Do">
                    <div class="grid-content">
                        <h1> To Do List: </h1>
                        <!-- START TO-DO TABLE
                                NOTES:  need to turn into scrollable table
                                        when rows are being added, grid only
                                        gets bigger -->
                        <table>
                            <col style="width:15%">
					        <col style="width:15%">
					        <col style="width:10%">

                            <thead>
                                <tr>
                                    <th>Assigned to:</th>
                                    <th>Task</th>
                                    <th>Deadline</th>
                                </tr>
                            </thead>
                                <tr>
                                    <td>Jose Santos</td>
                                    <td>Clean kitchen</td>
                                    <td>11.29.22</td>
                                </tr>
                                <tr>
                                    <td>Jose Santos</td>
                                    <td>Clean kitchen</td>
                                    <td>11.29.22</td>
                                </tr>
                                <tr>
                                    <td>Jose Santos</td>
                                    <td>Clean kitchen</td>
                                    <td>11.29.22</td>
                                </tr>
                        </table>
                        <!-- END TO-DO TABLE -->
                    </div>
                </div>
                <!-- END TO DO GRID -->

                <!-- STATISTICS GRID -->
                <div class="Sample-Statistics">
                    <div class="grid-content">
                        <h1> Sample Statistics</h1>
                    </div>
                </div>
                 <!-- END STATISTICS GRID -->

                 <!-- GROCERY LIST GRID-->
                <div class="Employee-List">
                    <div class="grid-content">
                        <h1>Employee List</h1>
                         <!-- START TO-DO TABLE
                                NOTES:  need to turn into scrollable table
                                        when rows are being added, grid only
                                        gets bigger -->
                            <table>
                                <col style="width:15%">
                                <col style="width:5%">
                    
                                <thead>
                                     <tr>
                                        <th>Full Name</th>
                                        <th>position</th>
                                     </tr>
                                </thead>
                                    <tr>
                                        <td>Chicken</td>
                                        <td>2</td>
                                    </tr>
                                    {{#each User}}
                                     <tr>
                                        <td>{{User.firstName}} {{User.lastName}}</td>
                                        <td>{{User.userType}}</td>
                                    </tr>
                                    {{/each}}
                            </table>
                    </div>
                </div>
                <!-- END GROCERY LIST GRID-->

 
                <!-- SAMPLE STATISTICS 2 GRID-->
                <div class="Sample-Statistics-2">
                    <div class="grid-content">
                        <h1> Sample Statistics (Total Sales)</h1>
                    </div>
                </div>
                <!-- END SAMPLE STATISTICS 2 GRID-->

            </div>

        </div>

	</body>
	</html>
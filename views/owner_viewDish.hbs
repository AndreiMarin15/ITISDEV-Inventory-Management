<!DOCTYPE html>
<html>
    <head>
        <title>Owner | View Dish</title>
        <link rel="stylesheet" href="/css/viewMenuItem.css" />
        <link rel="stylesheet" href="/css/base.css" />
        <script src="https://kit.fontawesome.com/e5cabd2361.js" crossorigin="anonymous"></script>
        <script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
    </head>
    <!-- Content Here -->
    <body>

    {{>ownerPanel}}

    <div class="content-container">

        
        <div class="back-area">
                    <a href="/ownerMenu" class="back-button">
                    <i class="fa-solid fa-arrow-left" style="color: rgb(79, 79, 79)"> </i> 
                    Go Back
                    </a>
        </div> 
            
        <div class="newMenuItem-box">
            <h1 class="header-font">View Dish</h1>
            <div class="field-box">
                <div>
                    <label for="search-item" class = "field-font">Dish Name</label>
                </div>
                <div>
                    <input type="text" class="textbox-long"  value="{{recipeName}}" disabled />
                </div>
            </div>
            <div class="field-box">
                <div>
                    <label for="menu-group" class = "field-font">Menu Group</label>
                </div>
                <div>
                    <input type="text" class="textbox-long"  value="{{menuGroupName}}" disabled />
                    
                </div>
            </div>




            <div class="field-box">
                <div>
                    <label for="search-item" class = "field-font">Ingredients</label>
                </div>
                    <table class="ingredients-table" id="ingredientsTable">
                        <thead>
					    <tr>
						    <th>Category Name</th>
						    <th>Quantity</th>
					    </tr>
					    </thead>
						<tbody>
						{{#each Ingredients}}
					    <tr>
							<td> {{categoryName}} </td>
                            <td> {{quantity}} </td>
					    </tr>
						{{/each}}
                        </tbody>
				    </table>
                </div>

            <div class="field-box">
                <div>
                    <label for="price" class = "field-font">Price</label>
                </div>
                <div>
                    <input type="text" class="textbox-short"  value="{{price}}" disabled />
                </div>
            </div>

            <input type="submit" class="button-red" value="Delete Dish"></input>
        </div>
    </div>
</body>
</html>